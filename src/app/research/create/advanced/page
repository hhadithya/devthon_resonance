import React, { useState } from 'react';

const ResearchAdvancedInfo = ({ onNext }) => {
  const [researchThumbnail, setResearchThumbnail] = useState('');
  const [researchTrailer, setResearchTrailer] = useState('');
  const [description, setDescription] = useState('');
  const [keyInformation, setKeyInformation] = useState(['', '', '']); // Initial array of 3 inputs
  const [collaborativeOpportunities, setCollaborativeOpportunities] = useState(['', '', '', '']); // Initial array of 4 inputs
  const [researchTeam, setResearchTeam] = useState(['']); // Initial array with one input

  const handleKeyInformationChange = (index, value) => {
    const updatedKeyInformation = [...keyInformation];
    updatedKeyInformation[index] = value;
    setKeyInformation(updatedKeyInformation);
  };

  const handleCollaborativeOpportunitiesChange = (index, value) => {
    const updatedCollaborativeOpportunities = [...collaborativeOpportunities];
    updatedCollaborativeOpportunities[index] = value;
    setCollaborativeOpportunities(updatedCollaborativeOpportunities);
  };

  const handleResearchTeamChange = (index, value) => {
    const updatedResearchTeam = [...researchTeam];
    updatedResearchTeam[index] = value;
    setResearchTeam(updatedResearchTeam);
  };

  const handleAddKeyInformation = () => {
    setKeyInformation([...keyInformation, '']);
  };

  const handleAddCollaborativeOpportunities = () => {
    setCollaborativeOpportunities([...collaborativeOpportunities, '']);
  };

  const handleAddResearchTeam = () => {
    setResearchTeam([...researchTeam, '']);
  };

  const handleSave = () => {
    // Save the data
    console.log({
      researchThumbnail,
      researchTrailer,
      description,
      keyInformation,
      collaborativeOpportunities,
      researchTeam,
    });
  };

  const handleSaveAndPreview = () => {
    // Save data and navigate to preview
    console.log('Save and Preview');
  };

  const handleNextPage = () => {
    // Navigate to the next page
    onNext({
      researchThumbnail,
      researchTrailer,
      description,
      keyInformation,
      collaborativeOpportunities,
      researchTeam,
    });
  };

  return (
    <div className="p-8">
      <h2 className="text-2xl font-semibold mb-6">Advance Informations</h2>

      <div className="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <div>
          <label className="block text-sm font-medium text-gray-700">Research Thumbnail</label>
          <div className="mt-1 border rounded p-2">
            <input
              type="file"
              onChange={(e) => setResearchThumbnail(e.target.value)}
              className="w-full"
            />
          </div>
        </div>

        <div>
          <label className="block text-sm font-medium text-gray-700">Research Trailer</label>
          <div className="mt-1 border rounded p-2">
            <input
              type="file"
              onChange={(e) => setResearchTrailer(e.target.value)}
              className="w-full"
            />
          </div>
        </div>
      </div>

      <div className="mb-4">
        <label className="block text-sm font-medium text-gray-700">Description</label>
        <textarea
          value={description}
          onChange={(e) => setDescription(e.target.value)}
          className="mt-1 p-2 border rounded w-full"
          rows={4}
        />
      </div>

      <div className="mb-4">
        <label className="block text-sm font-medium text-gray-700">Key Information</label>
        {keyInformation.map((info, index) => (
          <input
            key={index}
            type="text"
            value={info}
            onChange={(e) => handleKeyInformationChange(index, e.target.value)}
            className="mt-1 p-2 border rounded w-full mb-2"
          />
        ))}
        <button
          type="button"
          onClick={handleAddKeyInformation}
          className="bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-2 px-4 rounded"
        >
          Add new
        </button>
      </div>

      <div className="mb-4">
        <label className="block text-sm font-medium text-gray-700">Collaborative Opportunities</label>
        {collaborativeOpportunities.map((opportunity, index) => (
          <input
            key={index}
            type="text"
            value={opportunity}
            onChange={(e) => handleCollaborativeOpportunitiesChange(index, e.target.value)}
            className="mt-1 p-2 border rounded w-full mb-2"
          />
        ))}
        <button
          type="button"
          onClick={handleAddCollaborativeOpportunities}
          className="bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-2 px-4 rounded"
        >
          Add new
        </button>
      </div>

      <div className="mb-4">
        <label className="block text-sm font-medium text-gray-700">Research Team</label>
        {researchTeam.map((teamMember, index) => (
          <input
            key={index}
            type="text"
            value={teamMember}
            onChange={(e) => handleResearchTeamChange(index, e.target.value)}
            className="mt-1 p-2 border rounded w-full mb-2"
          />
        ))}
        <button
          type="button"
          onClick={handleAddResearchTeam}
          className="bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-2 px-4 rounded"
        >
          Add new
        </button>
      </div>

      <div className="flex justify-end">
        <button
          className="bg-red-500 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded"
          onClick={handleNextPage}
        >
          Save & Next
        </button>
      </div>
    </div>
  );
};

export default ResearchAdvancedInfo;